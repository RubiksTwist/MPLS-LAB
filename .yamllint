---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  truthy:
    check-keys: false  # Allows yes/no in keys which is common in Ansible
  comments:
    min-spaces-from-content: 1  # More flexible comment spacing
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  .venv/
  ansible/backups/
  .github/